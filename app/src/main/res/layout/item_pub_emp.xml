<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPubEmp"
        android:layout_width="101dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPubTituloEmp"
        android:layout_width="119dp"
        android:layout_height="21dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivPubEmp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResumPub"
        android:layout_width="202dp"
        android:layout_height="45dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivPubEmp"
        app:layout_constraintTop_toBottomOf="@+id/tvPubTituloEmp" />

    <ImageButton
        android:id="@+id/btDeletePub"
        android:layout_width="32dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toEndOf="@+id/tvResumPub"
        app:layout_constraintTop_toBottomOf="@+id/btEditPub"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/btEditPub"
        android:layout_width="33dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toEndOf="@+id/tvResumPub"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>